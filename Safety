<script>
var i = 0;
var txt = 'Be careful, you do not want to lose your arms like I did. ;)';
var speed = 50;

	function typeWriter() {
	  if (i < txt.length) {
	    document.getElementById("demo").innerHTML += txt.charAt(i);
	    i++;
	    setTimeout(typeWriter, speed);
	  }
}
</script>
